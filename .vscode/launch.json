{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web - API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/src/Presentation/NtisPlatform.Api/bin/Debug/net10.0/NtisPlatform.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Presentation/NtisPlatform.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7293;http://localhost:5268"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Launch (Worker Service)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-worker",
      "program": "${workspaceFolder}/src/Presentation/NtisPlatform.Worker/bin/Debug/net10.0/NtisPlatform.Worker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Presentation/NtisPlatform.Worker",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
